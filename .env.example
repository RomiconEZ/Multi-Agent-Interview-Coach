# =============================================================================
#                    MULTI-AGENT INTERVIEW COACH - CONFIGURATION
# =============================================================================
# Скопируйте этот файл в .env и заполните обязательные поля (помечены [REQUIRED])
# =============================================================================

# -----------------------------
# [REQUIRED] LiteLLM Configuration
# -----------------------------
# URL вашего LiteLLM прокси или совместимого OpenAI API
LITELLM_BASE_URL=http://host.docker.internal:4000

# API ключ (обязателен если LiteLLM требует авторизации)
LITELLM_API_KEY=sk-your-api-key-here

# Модель для использования (gpt-4o-mini, gpt-4o, claude-3-sonnet и т.д.)
LITELLM_MODEL=gpt-4o-mini

# Таймаут запросов в секундах
LITELLM_TIMEOUT=120

# Количество повторных попыток при ошибках
LITELLM_MAX_RETRIES=3

# -----------------------------
# [REQUIRED] Interview Settings
# -----------------------------
# Директория для сохранения логов интервью
INTERVIEW_LOG_DIR=/code/interview_logs

# Название вашей команды (будет в логах)
TEAM_NAME=My Team Name

# Максимальное количество ходов в интервью
MAX_TURNS=20

# -----------------------------
# Docker Compose
# -----------------------------
COMPOSE_PROJECT_NAME=interview_coach

# -----------------------------
# Networking and ports
# -----------------------------
BACKEND_PORT=8000
NGINX_EXTERNAL_PORT=90
GRADIO_PORT=7860

# -----------------------------
# Redis cache settings
# -----------------------------
REDIS_CACHE_HOST=redis_cache
REDIS_CACHE_PORT=6379

# -----------------------------
# Application metadata
# -----------------------------
APP_NAME=Multi-Agent Interview Coach
APP_DESCRIPTION=AI-powered technical interview system
APP_VERSION=0.1.0
LICENSE_NAME=Proprietary
CONTACT_NAME=Owner
CONTACT_EMAIL=owner@example.com

# -----------------------------
# Environment
# -----------------------------
ENVIRONMENT=local

# -----------------------------
# Client-side caching
# -----------------------------
CLIENT_CACHE_MAX_AGE=60

# -----------------------------
# Logging
# -----------------------------
APP_TZ_OFFSET=3
APP_LOG_DIR=/code/logs

# -----------------------------
# Runtime tuning
# -----------------------------
RESERVED_CPUS=6

# -----------------------------
# LangFuze settings
# -----------------------------
# В docker-compose важно: host должен быть "http://langfuse:3000", а не localhost.
LANGFUSE_ENABLED=true
LANGFUSE_HOST=http://langfuse:3000
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
